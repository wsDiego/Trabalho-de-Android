<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/background_material_dark"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.raphael.diego.palavras.NovaPerguntaActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Contribua com a sua pergunta!"
        android:id="@+id/textView4"
        android:layout_marginTop="36dp"
        android:textColor="@color/background_material_light"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Informe a pergunta:"
        android:id="@+id/textView5"
        android:layout_below="@+id/textView4"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:layout_marginTop="38dp"
        android:textSize="20dp"
        android:textColor="@color/background_material_light" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Informe a dica:"
        android:id="@+id/textView6"
        android:textSize="20dp"
        android:textColor="@color/background_material_light"
        android:layout_below="@+id/textView5"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:layout_marginTop="85dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Informe a resposta:"
        android:id="@+id/textView7"
        android:textSize="20dp"
        android:textColor="@color/background_material_light"
        android:layout_below="@+id/textView6"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6"
        android:layout_marginTop="82dp" />

    <Button
        android:id="@+id/btnSalvarPergunta"
        android:text="Salvar"
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:background="@color/colorPrimaryDark"
        android:textColor="#ffffff"
        android:layout_marginBottom="47dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="600px"
        android:layout_height="80px"
        android:id="@+id/editPergunta"
        android:layout_below="@+id/textView5"
        android:layout_alignLeft="@+id/textView6"

        android:background="@color/black_overlay"
        android:textColor="@color/background_material_light" />

    <EditText
        android:layout_width="600px"
        android:layout_height="80px"
        android:id="@+id/editDica"
        android:background="@color/black_overlay"
        android:layout_below="@+id/textView6"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6"
        android:textColor="@color/background_material_light" />

    <EditText
        android:layout_width="600px"
        android:layout_height="80px"
        android:id="@+id/editResposta"
        android:background="@color/black_overlay"
        android:layout_below="@+id/textView7"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignStart="@+id/textView7"
        android:textColor="@color/background_material_light" />
</RelativeLayout>